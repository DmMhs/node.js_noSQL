<%- include('../includes/top-section.ejs') %>
<main>
    <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let book of prods) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= book.name %></h1>
                    </header>

                    <div class="card__content">
                        <p class="product__year">Year: <%= book.year %></p>
                        <p class="product__price">Author: <%= book.author %></p>
                        <p class="product__description">Short Description: <%= book.description %></p>
                    </div>

                    <form action="/store/book-details/<%= book.id %>" method="GET" class="adm-btn-form">
                        <input 
                            type="hidden" 
                            name="id" 
                            value="<%= book.id %>"
                        >
                        <button class="adm-btn" type="submit">Details</button>
                    </form> 
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</main>
<%- include('../includes/bottom-section.ejs') %>